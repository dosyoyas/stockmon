# Dockerfile.test - StockMon API Test Container
# Base: Python 3.11+ for running integration tests against the StockMon API
# Exposes: Port 8000 for API access
# Purpose: Provides a containerized environment for running API integration tests

# Use official Python 3.11 slim image for smaller size
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies if needed (minimal for this project)
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better layer caching
# Docker will only rebuild from here if requirements.txt changes
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code
# Copying after requirements ensures dependencies layer is cached
COPY app/ ./app/

# Create non-root user for security
RUN useradd -m -u 1000 stockmon && \
    chown -R stockmon:stockmon /app

# Switch to non-root user
USER stockmon

# Expose port 8000 for API access
EXPOSE 8000

# Health check to verify API is responsive
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Default command: run uvicorn server
# Host 0.0.0.0 allows external connections in container
# Port 8000 is standard for FastAPI/uvicorn
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
